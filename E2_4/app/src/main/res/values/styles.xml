<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <style name="calculator">
            <item name="android:padding">16sp</item>
            <item name="android:background">@color/black</item>
        </style>
    <style name="number_button" parent="@style/Widget.AppCompat.Button">
        <item name="hintTextColor">@color/black</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="operation_button" parent="@style/Widget.AppCompat.Button">
        <item name="hintTextColor">@color/white</item>
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="main_button" parent="@style/Widget.AppCompat.Button">
        <item name="hintTextColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:layout_span">2</item>
    </style>

    <style name="result_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:layout_span">4</item>
    </style>
</resources>